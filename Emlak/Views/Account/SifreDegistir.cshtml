@model Emlak.Models.SifreDegistirme
@{
    ViewBag.Title = "SifreDegistir";
}

<div class="container">
    <!-- Slider -->


    <div class="row">
        @Html.Action("PartialFiltre", "Home")

        <!-- İlan Listesi -->
        <br />


        <div class="col-md-9">
            <div class="thumbnail" style="width:845px;">


                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Şifre Değiştir</li>
                    </ol>
                </nav>
                @using (Html.BeginForm("SifreDegistir", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {

                    //Güncelleme işlemi ıd ye göre yapılacağı için modelin ıd sini aldık ..

                    @Html.AntiForgeryToken()


                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 control-label">Eski Şifre</label>
                        <div class="col-sm-4">
                            @Html.PasswordFor(m => m.OldPassword, new { HtmlAttributes = new { @class = "form-control" } }) @*//Şifreyi parola olarak gösteriyor ..*@
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 control-label">Yeni Şifre</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.NewPassword, new { HtmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })

                        </div>
                    </div>



                    <div class="form-group ">
                        <label for="inputEmail3" class="col-sm-2 control-label">Şifre Tekrar</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.ConNewPassword, new { HtmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.ConNewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>




                    <div class="form-group ">

                        <div class="col-sm-10 col-sm-offset-3">
                            <button type="submit" class="btn btn-warning"><i class="fa fa-users" aria-hidden="true"></i> Şifre Değiştir </button>
                        </div>
                    </div>

                }



            </div>


        </div>




        <!-- 6 bölümlük alanlık kısmı 3 e böl diyorum  -->


    </div>
</div>

